[MASTER]

extension-pkg-whitelist=_pylibmc
jobs=4

[MESSAGES CONTROL]

disable=fixme,ungrouped-imports,no-else-raise,bad-continuation

[REPORTS]

output-format=parseable
reports=yes
score=yes

[BASIC]

include-naming-hint=yes

[FORMAT]

expected-line-ending-format=LF
max-line-length=79
ignore-long-lines=^.*((#|:) )?<?https?://\\S+>?$

[MISCELLANEOUS]

notes=FIXME,XXX,TODO,HACK

[IMPORTS]

allow-wildcard-with-all=no

[EXCEPTIONS]

overgeneral-exceptions=
